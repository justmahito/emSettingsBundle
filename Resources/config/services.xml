<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
<!--
    <parameters>
    </parameters>-->
    <services>
        <service id="twig.extension.settings" class="Settings\Bundle\Twig\Extension\SettingsExtension">
            <tag name="twig.extension"/>
            <argument type="service" id="em.settings"/>
        </service>

        <service id="em.settings.manager.default" class="Settings\Bundle\Manager\SettingManager">
            <argument type="service" id="em.settings.entity_manager"/>
            <argument>%em.setting.model.class%</argument>
            <argument>%em.setting.list.delimiter%</argument>
        </service>

        <service id="em.settings.entity_manager" factory-service="doctrine" factory-method="getEntityManager" class="Doctrine\ORM\EntityManager" public="false">
            <argument>%em.model.manager.name%</argument>
        </service>
    </services>
</container>
